{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Wrangler",
      "type": "node",
      "request": "attach",
      "preLaunchTask": "Wrangler Dev",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    }
  ]
}